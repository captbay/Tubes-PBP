<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_kelas"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#fb8500">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Title, secondary and supporting text -->
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="150dp"
                android:layout_height="118dp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_namaMatPel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Mata Pelajaran"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <TextView
                    android:id="@+id/tv_tahunAjaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Tahun Ajaran"
                    android:textSize="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_sesiKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Jadwal"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />
                <TextView
                    android:id="@+id/tv_guru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="guru"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>